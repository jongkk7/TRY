<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="지문인식"
        android:textColor="@color/colorBlack"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageViewFingerprint"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_fileName="lottie_finger_print.json"
            app:lottie_autoPlay="false"
            app:lottie_loop="false" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageViewFingerprintFailed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_fileName="lottie_failed.json"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="신청자의 지문 정보를 인식합니다."
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="제공된 지문데이터는\n출입관리 시스템에서 관리됩니다."
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorBlack"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="취소"
            android:textColor="@color/colorRed"/>

    </RelativeLayout>

</LinearLayout>